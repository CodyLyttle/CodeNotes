<UserControl x:Class="CodeNotes.CodeSnippet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeNotes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
        <Grid VerticalAlignment="Stretch" MinWidth="200" HorizontalAlignment="Left"  Background="#22ffffff">
            <TextBlock x:Name="txtDisplay"
                FontSize="{Binding FontSize, ElementName=txtInput}"
                Padding="{Binding Padding, ElementName=txtInput}"
                Foreground="#eeeeee"
                Margin="3, 1, 0, 0"/>

            <TextBox x:Name="txtInput" 
                 VerticalAlignment="Stretch" 
                 AcceptsReturn="True"
                 AcceptsTab="True"
                 Background ="Transparent"
                 Foreground="Transparent"
                 CaretBrush="#eeeeee"
                 Padding="12 8"/>
        </Grid>
    </ScrollViewer>
</UserControl>
